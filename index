            // *******************************************************


            // --- Menghubungkan Elemen HTML ke JavaScript ---
            const slider = document.getElementById('scale-slider');
            const backgroundContainer = document.getElementById('background-image-container');
            const objectName = document.getElementById('object-name');
            const objectSize = document.getElementById('object-size');
            const objectDescription = document.getElementById('object-description');
            
            let currentObjectIndex = 0; // Menyimpan indeks objek yang sedang dilihat

            // --- Mengatur Slider ---
            slider.min = 0;
            slider.max = universeData.length - 1;
            slider.value = 5;
            slider.step = 1;

            // --- Fungsi untuk Update Tampilan ---
            function updateDisplay(index) {
                index = Math.max(0, Math.min(index, universeData.length - 1));
                currentObjectIndex = index; // Perbarui indeks saat ini
                
                const item = universeData[index];

                // GANTI background image menggunakan URL dari data
                backgroundContainer.style.backgroundImage = `url(${item.imageUrl})`; 
                
                // Perbarui konten di kartu display
                objectName.textContent = item.name;
                objectSize.textContent = `Ukuran: ${item.sizeText}`;
                objectDescription.textContent = item.description;
            }
            
            // --- Event Listener untuk Slider ---
            slider.addEventListener('input', (event) => {
                const index = parseInt(event.target.value);
                updateDisplay(index);
            });

            // --- Memuat Tampilan Awal ---
            updateDisplay(parseInt(slider.value));

        });
    </script>

